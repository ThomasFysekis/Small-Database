CREATE TABLE Mhxanikos (
  Kwdikos INTEGER   NOT NULL ,
  Onoma VARCHAR(30)   NOT NULL ,
  Epwnumo VARCHAR(30)   NOT NULL ,
  Wres VARCHAR(20)   NOT NULL ,
  Sxolia VARCHAR(40)   NOT NULL   ,
PRIMARY KEY(Kwdikos));




CREATE TABLE Pwlhths (
  ID INTEGER   NOT NULL ,
  Epwnumo VARCHAR(30)   NOT NULL ,
  Onoma VARCHAR(30)   NOT NULL   ,
PRIMARY KEY(ID));




CREATE TABLE Timologio (
  Kwdikos INTEGER   NOT NULL ,
  Pwlhths_ID INTEGER   NOT NULL ,
  Aksia INTEGER   NOT NULL ,
  Hmeromhnia VARCHAR(20)   NOT NULL   ,
PRIMARY KEY(Kwdikos)  ,
  FOREIGN KEY(Pwlhths_ID)
    REFERENCES Pwlhths(ID));


CREATE INDEX Timologio_FKIndex1 ON Timologio (Pwlhths_ID);


CREATE INDEX IFK_Agora ON Timologio (Pwlhths_ID);


CREATE TABLE Pelaths (
  ID INTEGER   NOT NULL ,
  Timologio_Kwdikos INTEGER   NOT NULL ,
  Onoma VARCHAR(30)   NOT NULL ,
  Epwnumo VARCHAR(30)   NOT NULL ,
  Dieuthunsh VARCHAR(30)   NOT NULL   ,
PRIMARY KEY(ID)  ,
  FOREIGN KEY(Timologio_Kwdikos)
    REFERENCES Timologio(Kwdikos));


CREATE INDEX Pelaths_FKIndex1 ON Pelaths (Timologio_Kwdikos);


CREATE INDEX IFK_Pairnei ON Pelaths (Timologio_Kwdikos);


CREATE TABLE Autokinhto (
  ID INTEGER   NOT NULL ,
  Pelaths_ID INTEGER   NOT NULL ,
  Pwlhths_ID INTEGER   NOT NULL ,
  Xrwma VARCHAR(20)   NOT NULL ,
  Etos INTEGER   NOT NULL ,
  Etairia VARCHAR(30)   NOT NULL ,
  Seiriakos Arithmos INTEGER   NOT NULL   ,
PRIMARY KEY(ID)    ,
  FOREIGN KEY(Pwlhths_ID)
    REFERENCES Pwlhths(ID),
  FOREIGN KEY(Pelaths_ID)
    REFERENCES Pelaths(ID));


CREATE INDEX Autokinhto_FKIndex1 ON Autokinhto (Pwlhths_ID);
CREATE INDEX Autokinhto_FKIndex2 ON Autokinhto (Pelaths_ID);


CREATE INDEX IFK_Pwlhsh(Y) ON Autokinhto (Pwlhths_ID);
CREATE INDEX IFK_Episkeuh/Agora ON Autokinhto (Pelaths_ID);


CREATE TABLE Eishthrio (
  Kwdikos INTEGER   NOT NULL ,
  Mhxanikos_Kwdikos INTEGER   NOT NULL ,
  Autokinhto_ID INTEGER   NOT NULL ,
  Hmeromhnia Eisagwghs VARCHAR(20)   NOT NULL ,
  Hmeromhnia Paralabhs VARCHAR(20)   NOT NULL ,
  Kostos INTEGER   NOT NULL   ,
PRIMARY KEY(Kwdikos)    ,
  FOREIGN KEY(Autokinhto_ID)
    REFERENCES Autokinhto(ID),
  FOREIGN KEY(Mhxanikos_Kwdikos)
    REFERENCES Mhxanikos(Kwdikos));


CREATE INDEX Eishthrio_FKIndex1 ON Eishthrio (Autokinhto_ID);
CREATE INDEX Eishthrio_FKIndex2 ON Eishthrio (Mhxanikos_Kwdikos);


CREATE INDEX IFK_Episkeuh(N) ON Eishthrio (Autokinhto_ID);
CREATE INDEX IFK_Pros Mhxaniko ON Eishthrio (Mhxanikos_Kwdikos);


